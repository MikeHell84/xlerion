        {
          "name": "Subestimación potencial",
          "rule": "if estimated_hours < 0.4 * historical_average for similar projects",
          "action": "flag_as_high_risk",
          "message": "Estimado es 40% menor que proyectos similares. Recomendamos revisar manualmente o hacer discovery profunda."
        },
        {
          "name": "Tarea crítica incompleta",
          "rule": "if critical_task hours < minimum_hours",
          "action": "force_minimum_and_notify",
          "message": "Se forzó el mínimo de horas para tarea crítica: [task]. Total: [hours]h."
        },
        {
          "name": "Multiplicador excesivo",
          "rule": "if accumulated_multiplier > 3.0",
          "action": "cap_at_3_0_and_warn",
          "message": "Multiplicadores acumulativos superan x3.0. Recomendamos dividir proyecto o hacer discovery para reducir scope."
        },
        {
          "name": "Seguridad en sistema sensible",
          "rule": "if integrations include banking AND security_multiplier not applied",
          "action": "auto_apply_security_multiplier",
          "message": "Detectamos integración bancaria sin seguridad crítica. Se aplicó multiplicador x1.5 automáticamente."
