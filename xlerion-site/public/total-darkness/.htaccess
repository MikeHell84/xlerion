# ========== CORS CONFIGURATION ==========

<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
  Header set Access-Control-Max-Age "86400"
</IfModule>

# Respond to OPTIONS requests

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_METHOD} ^OPTIONS$
  RewriteRule ^(.*)$ - [L,R=200]
</IfModule>

# Cargar index.html por defecto

 DirectoryIndex index.html

# Desactivar el listado de archivos y carpetas para mayor seguridad

 Options -Indexes

# --- REDIRECCIONES SEO ---

 <IfModule mod_rewrite.c>
   RewriteEngine On

# CRITICAL: Do NOT rewrite requests to actual files or directories

   RewriteCond %{REQUEST_FILENAME} !-f
   RewriteCond %{REQUEST_FILENAME} !-d

# Forzar HTTPS (descomentar si tienes SSL)

# RewriteCond %{HTTPS} off

# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirigir www a no-www (opcional)

# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]

# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

 </IfModule>

# --- COMPRESIÓN GZIP PARA SEO Y RENDIMIENTO ---

 <IfModule mod_deflate.c>
   AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
 </IfModule>

# --- POLÍTICAS DE CACHÉ MODERNAS ---

# Eliminar el header Pragma obsoleto que causa la advertencia

 Header unset Pragma

# Forzar la revalidación de archivos críticos para que la PWA se actualice correctamente

# El navegador siempre pedirá una nueva versión de estos archivos

 <FilesMatch "\.(html|js|json)$">
   Header set Cache-Control "no-cache, no-store, must-revalidate"
 </FilesMatch>

# Permitir que los assets estáticos (imágenes, fuentes) se guarden en caché por un largo tiempo

 <FilesMatch "\.(ico|jpg|jpeg|png|gif|svg|woff|woff2|ttf|eot)$">
   Header set Cache-Control "public, max-age=31536000, immutable"
 </FilesMatch>

