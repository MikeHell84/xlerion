// Vehicle icon component
const VehicleIcon = ({ type, x, y, direction, collided }) => {
    let rotationAngle = 0;
    if (direction === 'N') rotationAngle = 0;
    else if (direction === 'S') rotationAngle = 180;
    else if (direction === 'E') rotationAngle = 90;
    else if (direction === 'W') rotationAngle = 270;

    const colors = { car: collided ? '#ef4444' : '#00e9fa', motorcycle: collided ? '#ef4444' : '#ff6b9d', bus: collided ? '#ef4444' : '#ffd700' };

    return (
        <g transform={`translate(${x},${y}) rotate(${rotationAngle})`}>
            {type === 'car' && (
                <>
                    <rect x="-4" y="-3" width="8" height="6" fill={colors.car} rx="1" opacity={collided ? 1 : 0.9} />
                    {collided && (
                        <>
                            <circle cx="-1" cy="0" r="1.5" fill="#ef4444" opacity="0.6" />
                            <circle cx="1" cy="0" r="1.5" fill="#ef4444" opacity="0.6" />
                        </>
                    )}
                </>
            )}
            {type === 'motorcycle' && (
                <>
                    <circle cx="0" cy="0" r="2.5" fill={colors.motorcycle} opacity={collided ? 1 : 0.9} />
                    {collided && <circle cx="0" cy="0" r="2.5" fill="none" stroke="#ef4444" strokeWidth="1" opacity="0.8" />}
                </>
            )}
            {type === 'bus' && (
                <>
                    <rect x="-5" y="-4" width="10" height="8" fill={colors.bus} rx="1" opacity={collided ? 1 : 0.85} />
                    {collided && <rect x="-5" y="-4" width="10" height="8" fill="none" stroke="#ef4444" strokeWidth="0.8" rx="1" opacity="0.8" />}
                </>
            )}
        </g>
    );
};

// Traffic light component
const TrafficLight = ({ phase, direction }) => {
    const colors = { red: '#ef4444', yellow: '#fbbf24', green: '#10b981' };
    const isPhaseActive = (phase === 'NS' && ['N', 'S'].includes(direction)) ||
        (phase === 'EO' && ['E', 'W'].includes(direction));

    // N-S roads (vertical) use horizontal lights
    // E-W roads (horizontal) use vertical lights
    const isHorizontal = ['N', 'S'].includes(direction);

    return (
        <g>
            {['red', 'yellow', 'green'].map((light, idx) => {
                let x, y;
                if (isHorizontal) {
                    // Horizontal arrangement for N-S roads
                    x = -8 + idx * 8;
                    y = 0;
                } else {
                    // Vertical arrangement for E-W roads
                    x = 0;
                    y = -8 + idx * 8;
                }
                const color = colors[light];
                // Determinar qu√© luz debe estar encendida
                let isOn = false;
                if (light === 'red' && !isPhaseActive) isOn = true;  // Rojo cuando NO es fase activa
                if (light === 'green' && isPhaseActive) isOn = true; // Verde cuando S√ç es fase activa
                // Amarillo siempre apagado en esta versi√≥n simplificada

                return (
                    <circle
                        key={light}
                        cx={x}
                        cy={y}
                        r="2.5"
                        fill={isOn ? color : '#1a1a1a'}
                        opacity={isOn ? 1 : 0.3}
                        stroke={color}
                        strokeWidth="0.4"
                    />
                );
            })}
        </g>
    );
};

// Main component
export default function XlerionGreenWave() {
